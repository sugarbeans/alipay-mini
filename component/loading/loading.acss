.mask{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 1000;
}
.loading-img{
  position: fixed;
  top: 100px;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: 2000;
  width: 100%;
  text-align: center;
  color: #325572;
}
.loading-img>image{
  width: 100%;
} 
.loading-text{
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  margin-top: 10px;
}
